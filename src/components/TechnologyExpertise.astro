---
import { ScrollReveal } from '@/components/ui/scroll-reveal'
import { Plasma } from '@/components/ui/plasma'
---

<section id="expertise" class="border-y border-[var(--stone-200)]">
  <Plasma
    client:visible
    color="#A8A29E"
    speed={0.3}
    direction="forward"
    scale={1.2}
    opacity={0.2}
    mouseInteractive={false}
    className="bg-[var(--stone-50)]"
  >
  <div class="py-28 md:py-36 px-6">
  <div class="max-w-7xl mx-auto">
    <ScrollReveal client:visible>
      <div class="text-center mb-20">
        <p class="section-label justify-center text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)]">
          Technology Expertise
        </p>
        <h2 class="text-4xl md:text-5xl font-extrabold tracking-tighter text-[var(--stone-900)] mt-4">
          Built for What's Next
        </h2>
      </div>
    </ScrollReveal>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Web3 -->
      <ScrollReveal client:visible delay={0.1}>
        <div class="bg-white rounded-2xl p-8">
          <div class="w-14 h-14 rounded-2xl bg-[var(--stone-100)] flex items-center justify-center mb-8">
            <svg class="w-7 h-7 text-[var(--stone-900)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path d="M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z" />
              <polyline points="3.27 6.96 12 12.01 20.73 6.96" />
              <line x1="12" y1="22.08" x2="12" y2="12" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-[var(--stone-900)] mb-4">Web3 & Blockchain</h3>
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Smart Contract Development
            </li>
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              DeFi Protocol Design
            </li>
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              NFT & Token Platforms
            </li>
          </ul>
        </div>
      </ScrollReveal>

      <!-- AI/ML -->
      <ScrollReveal client:visible delay={0.2}>
        <div class="bg-white rounded-2xl p-8">
          <div class="w-14 h-14 rounded-2xl bg-[var(--stone-100)] flex items-center justify-center mb-8">
            <svg class="w-7 h-7 text-[var(--stone-900)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-[var(--stone-900)] mb-4">AI & Machine Learning</h3>
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Large Language Models
            </li>
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Computer Vision Systems
            </li>
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Natural Language Processing
            </li>
          </ul>
        </div>
      </ScrollReveal>

      <!-- Enterprise -->
      <ScrollReveal client:visible delay={0.3}>
        <div class="bg-white rounded-2xl p-8">
          <div class="w-14 h-14 rounded-2xl bg-[var(--stone-100)] flex items-center justify-center mb-8">
            <svg class="w-7 h-7 text-[var(--stone-900)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-[var(--stone-900)] mb-4">Enterprise Solutions</h3>
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Cloud-Native Architecture
            </li>
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Microservices & DevOps
            </li>
            <li class="flex items-start gap-3 text-sm text-[var(--stone-500)]">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-[var(--warm-wood)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              Performance Optimization
            </li>
          </ul>
        </div>
      </ScrollReveal>
    </div>
  </div>
  </Plasma>
</section>
