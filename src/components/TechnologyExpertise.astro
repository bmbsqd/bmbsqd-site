---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
---

<section id="expertise" class="py-20 bg-background">
	<div class="container mx-auto px-6">
		<!-- Section Header -->
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
				Technology Expertise
			</h2>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">
				Leading the industry with cutting-edge expertise in Web3, AI, and emerging technologies.
				Our 25+ years of experience positions us at the forefront of technological innovation.
			</p>
		</div>

		<!-- Expertise Areas -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
			<!-- Web3/Crypto Leadership -->
			<Card>
				<CardHeader>
					<CardTitle className="flex items-center gap-3">
						<div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
							<svg class="w-5 h-5 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2L2 22h20L12 2zm0 3.5L18.5 20h-13L12 5.5z"/>
							</svg>
						</div>
						Web3 & Blockchain
					</CardTitle>
					<CardDescription>
						Early adoption leaders with deep expertise in blockchain technology,
						smart contracts, and decentralized applications.
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="space-y-2">
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Smart Contract Development</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">DeFi Protocols</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">NFT Platforms</span>
						</div>
					</div>
				</CardContent>
			</Card>

			<!-- AI & Machine Learning -->
			<Card>
				<CardHeader>
					<CardTitle className="flex items-center gap-3">
						<div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
							<svg class="w-5 h-5 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
						</div>
						AI & Machine Learning
					</CardTitle>
					<CardDescription>
						5+ years of AI development experience, implementing cutting-edge
						machine learning solutions for enterprise clients.
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="space-y-2">
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Large Language Models</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Computer Vision</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Natural Language Processing</span>
						</div>
					</div>
				</CardContent>
			</Card>

			<!-- Enterprise Technology -->
			<Card>
				<CardHeader>
					<CardTitle className="flex items-center gap-3">
						<div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
							<svg class="w-5 h-5 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
							</svg>
						</div>
						Enterprise Solutions
					</CardTitle>
					<CardDescription>
						Full-stack enterprise technology solutions with cloud-native
						architecture and scalable infrastructure.
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="space-y-2">
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Cloud Architecture</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Microservices</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">DevOps & CI/CD</span>
						</div>
					</div>
				</CardContent>
			</Card>
		</div>

	</div>
</section>