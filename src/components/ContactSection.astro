---
import { ScrollReveal } from '@/components/ui/scroll-reveal'
import { Plasma } from '@/components/ui/plasma'
---

<section id="contact" class="border-t border-[var(--stone-200)]">
  <Plasma
    client:visible
    color="#A8A29E"
    speed={0.3}
    direction="forward"
    scale={1.2}
    opacity={0.2}
    mouseInteractive={false}
    className="bg-[var(--stone-50)]"
  >
  <div class="py-28 md:py-36 px-6">
  <div class="max-w-3xl mx-auto text-center">
    <ScrollReveal client:visible>
      <p class="section-label justify-center text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)]">
        Contact
      </p>
      <h2 class="text-4xl md:text-5xl font-extrabold tracking-tighter text-[var(--stone-900)] mt-4 mb-6">
        Ready to Start?
      </h2>
      <p class="text-[var(--stone-500)] text-lg leading-relaxed mb-16">
        Let's discuss how our 25+ years of technology leadership can
        accelerate your next breakthrough.
      </p>
    </ScrollReveal>

    <ScrollReveal client:visible delay={0.1}>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <div class="text-center">
          <div class="w-12 h-12 rounded-2xl bg-[var(--stone-100)] flex items-center justify-center mx-auto mb-4">
            <svg class="w-5 h-5 text-[var(--stone-900)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" /><polyline points="22,6 12,13 2,6" />
            </svg>
          </div>
          <p class="text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)] mb-1">Email</p>
          <a href="mailto:ceo@bmbsqd.com" class="text-[var(--stone-900)] font-medium text-sm hover:underline">ceo@bmbsqd.com</a>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 rounded-2xl bg-[var(--stone-100)] flex items-center justify-center mx-auto mb-4">
            <svg class="w-5 h-5 text-[var(--stone-900)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" />
            </svg>
          </div>
          <p class="text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)] mb-1">Phone</p>
          <a href="tel:+1-310-555-0100" class="text-[var(--stone-900)] font-medium text-sm hover:underline">+1 (310) 555-0100</a>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 rounded-2xl bg-[var(--stone-100)] flex items-center justify-center mx-auto mb-4">
            <svg class="w-5 h-5 text-[var(--stone-900)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <circle cx="12" cy="12" r="10" /><line x1="2" y1="12" x2="22" y2="12" /><path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z" />
            </svg>
          </div>
          <p class="text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)] mb-1">Offices</p>
          <p class="text-[var(--stone-900)] font-medium text-sm">LA / Stockholm / Singapore</p>
        </div>
      </div>
    </ScrollReveal>

    <ScrollReveal client:visible delay={0.2}>
      <a href="mailto:info@bmbsqd.com" class="btn-showroom text-base px-10 py-4">
        Start a Conversation
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7" />
        </svg>
      </a>
      <p class="text-[var(--stone-400)] text-xs mt-6">
        Typical response within 24 hours
      </p>
    </ScrollReveal>
  </div>
  </div>
  </Plasma>
</section>
