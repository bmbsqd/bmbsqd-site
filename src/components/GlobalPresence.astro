---
import { ScrollReveal } from '@/components/ui/scroll-reveal'
---

<section id="global-presence" class="py-28 md:py-36 px-6">
  <div class="max-w-7xl mx-auto">
    <ScrollReveal client:visible>
      <div class="text-center mb-20">
        <p class="section-label justify-center text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)]">
          Global Presence
        </p>
        <h2 class="text-4xl md:text-5xl font-extrabold tracking-tighter text-[var(--stone-900)] mt-4">
          Three Continents, One Standard
        </h2>
      </div>
    </ScrollReveal>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Los Angeles -->
      <ScrollReveal client:visible delay={0.1}>
        <div class="showroom-card h-full flex flex-col">
          <div class="rounded-2xl mb-8 overflow-hidden">
            <img src="/images/cities/los-angeles.jpg" alt="Los Angeles skyline at sunset" class="w-full h-48 object-cover" loading="lazy" />
          </div>
          <div class="flex items-baseline justify-between mb-3">
            <h3 class="text-xl font-bold text-[var(--stone-900)]">Los Angeles</h3>
            <span class="text-xs text-[var(--stone-400)] font-medium">PST</span>
          </div>
          <p class="text-[var(--stone-500)] text-sm leading-relaxed mb-8 flex-1">
            Silicon Beach headquarters driving innovation in entertainment
            technology and the startup ecosystem.
          </p>
          <div class="flex items-center gap-2 pt-6 border-t border-[var(--stone-200)] text-xs text-[var(--stone-400)] font-medium">
            <svg class="w-3.5 h-3.5 text-[var(--warm-wood)]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Entertainment & Media Hub
          </div>
        </div>
      </ScrollReveal>

      <!-- Stockholm -->
      <ScrollReveal client:visible delay={0.2}>
        <div class="showroom-card h-full flex flex-col">
          <div class="rounded-2xl mb-8 overflow-hidden">
            <img src="/images/cities/stockholm.jpg" alt="Stockholm waterfront" class="w-full h-48 object-cover" loading="lazy" />
          </div>
          <div class="flex items-baseline justify-between mb-3">
            <h3 class="text-xl font-bold text-[var(--stone-900)]">Stockholm</h3>
            <span class="text-xs text-[var(--stone-400)] font-medium">CET</span>
          </div>
          <p class="text-[var(--stone-500)] text-sm leading-relaxed mb-8 flex-1">
            Nordic innovation center with deep roots in European technology
            leadership and design excellence.
          </p>
          <div class="flex items-center gap-2 pt-6 border-t border-[var(--stone-200)] text-xs text-[var(--stone-400)] font-medium">
            <svg class="w-3.5 h-3.5 text-[var(--stone-500)]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            European Tech Gateway
          </div>
        </div>
      </ScrollReveal>

      <!-- Singapore -->
      <ScrollReveal client:visible delay={0.3}>
        <div class="showroom-card h-full flex flex-col">
          <div class="rounded-2xl mb-8 overflow-hidden">
            <img src="/images/cities/singapore.jpg" alt="Singapore Marina Bay skyline" class="w-full h-48 object-cover" loading="lazy" />
          </div>
          <div class="flex items-baseline justify-between mb-3">
            <h3 class="text-xl font-bold text-[var(--stone-900)]">Singapore</h3>
            <span class="text-xs text-[var(--stone-400)] font-medium">SGT</span>
          </div>
          <p class="text-[var(--stone-500)] text-sm leading-relaxed mb-8 flex-1">
            Asia-Pacific command center connecting Eastern markets with
            cutting-edge fintech and blockchain expertise.
          </p>
          <div class="flex items-center gap-2 pt-6 border-t border-[var(--stone-200)] text-xs text-[var(--stone-400)] font-medium">
            <svg class="w-3.5 h-3.5 text-[var(--stone-500)]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            APAC Fintech Center
          </div>
        </div>
      </ScrollReveal>
    </div>
  </div>
</section>
