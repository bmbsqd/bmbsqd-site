---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
---

<section id="track-record" class="py-20 bg-background">
	<div class="max-w-7xl mx-auto px-6">
		<!-- Section Header -->
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
				Proven Track Record
			</h2>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">
				25+ years of delivering exceptional results, multiple $100M+ exits,
				and award-winning innovations that define industry standards.
			</p>
		</div>

		<!-- Track Record Cards -->
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
			<!-- Industry Recognition -->
			<Card>
				<CardHeader>
					<CardTitle className="flex items-center gap-3">
						<div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
							<svg class="w-5 h-5 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
							</svg>
						</div>
						Industry Recognition
					</CardTitle>
					<CardDescription>
						Award-winning innovations recognized by industry leaders
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="space-y-3">
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">2016 Music Ally Best Music App Winner (Sony Music)</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">w3 2016 Movie & Film Website Gold Award (Paramount)</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
							<span class="text-sm">Multiple technology innovation awards</span>
						</div>
					</div>
				</CardContent>
			</Card>

			<!-- Financial Success -->
			<Card>
				<CardHeader>
					<CardTitle className="flex items-center gap-3">
						<div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
							<svg class="w-5 h-5 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 15c-2.761 0-5-2.239-5-5s2.239-5 5-5 5 2.239 5 5-2.239 5-5 5z"/>
							</svg>
						</div>
						Financial Success
					</CardTitle>
					<CardDescription>
						Multiple $100M+ exits demonstrating proven value creation
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="grid grid-cols-2 gap-4">
						<div class="text-center p-4 bg-muted rounded-lg">
							<div class="text-3xl font-bold text-foreground">$100M+</div>
							<div class="text-sm text-muted-foreground">Exit Values</div>
						</div>
						<div class="text-center p-4 bg-muted rounded-lg">
							<div class="text-3xl font-bold text-foreground">25+</div>
							<div class="text-sm text-muted-foreground">Years Experience</div>
						</div>
					</div>
				</CardContent>
			</Card>

			<!-- Enterprise Clients -->
			<Card>
				<CardHeader>
					<CardTitle>Enterprise Clients</CardTitle>
					<CardDescription>
						Trusted by Fortune 500 companies and industry leaders
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="grid grid-cols-2 gap-4">
						<div class="p-3 bg-muted rounded-lg text-center">
							<div class="font-semibold text-foreground">Sony Music</div>
							<div class="text-xs text-muted-foreground">Entertainment Tech</div>
						</div>
						<div class="p-3 bg-muted rounded-lg text-center">
							<div class="font-semibold text-foreground">Paramount Pictures</div>
							<div class="text-xs text-muted-foreground">Media Platform</div>
						</div>
						<div class="p-3 bg-muted rounded-lg text-center">
							<div class="font-semibold text-foreground">Live Nation</div>
							<div class="text-xs text-muted-foreground">Event Technology</div>
						</div>
						<div class="p-3 bg-muted rounded-lg text-center">
							<div class="font-semibold text-foreground">Fortune 500</div>
							<div class="text-xs text-muted-foreground">Advisory Services</div>
						</div>
					</div>
				</CardContent>
			</Card>

			<!-- Global Impact -->
			<Card>
				<CardHeader>
					<CardTitle>Global Impact</CardTitle>
					<CardDescription>
						Worldwide reach with multi-industry expertise
					</CardDescription>
				</CardHeader>
				<CardContent>
					<div class="space-y-3">
						<div class="flex justify-between items-center">
							<span class="text-sm">Worldwide Client Base</span>
							<span class="font-bold text-primary">✓</span>
						</div>
						<div class="flex justify-between items-center">
							<span class="text-sm">Multi-Industry Expertise</span>
							<span class="font-bold text-primary">✓</span>
						</div>
						<div class="flex justify-between items-center">
							<span class="text-sm">Enterprise-Scale Solutions</span>
							<span class="font-bold text-primary">✓</span>
						</div>
						<div class="flex justify-between items-center">
							<span class="text-sm">Innovation Leadership</span>
							<span class="font-bold text-primary">✓</span>
						</div>
					</div>
				</CardContent>
			</Card>
		</div>

		<!-- Testimonial -->
		<Card>
			<CardContent className="p-8 text-center">
				<h3 class="text-2xl font-bold text-foreground mb-6">What Industry Leaders Say</h3>
				<blockquote class="text-lg italic text-muted-foreground mb-4">
					"Bombsquad consistently delivers innovative solutions that exceed expectations.
					Their technical expertise and global perspective make them an invaluable partner
					for complex technology initiatives."
				</blockquote>
				<div class="text-sm text-muted-foreground">
					— Technology Executive, Fortune 500 Company
				</div>
			</CardContent>
		</Card>
	</div>
</section>