---
import { ScrollReveal } from '@/components/ui/scroll-reveal'
---

<section id="track-record" class="py-28 md:py-36 px-6 border-t border-[var(--stone-200)]">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-start">
      <!-- Left: Editorial text -->
      <div>
        <ScrollReveal client:visible>
          <div class="rounded-2xl overflow-hidden mb-10">
            <img src="/images/track-record.jpg" alt="Strategy session" class="w-full h-64 object-cover" loading="lazy" />
          </div>
          <p class="section-label text-[10px] font-bold uppercase tracking-widest text-[var(--stone-400)]">
            Track Record
          </p>
          <h2 class="text-4xl md:text-[3rem] font-extrabold tracking-tighter text-[var(--stone-900)] leading-tight mb-8">
            A Legacy of<br />Elite Success
          </h2>
          <p class="text-[var(--stone-500)] text-lg leading-[1.75] mb-8">
            25+ years of delivering exceptional results, multiple $100M+ exits,
            and award-winning innovations that define industry standards.
          </p>
          <p class="text-[var(--stone-500)] text-lg leading-[1.75] mb-10">
            From Sony Music to Paramount Pictures, we've partnered with the world's
            most demanding organizations to build technology that matters.
          </p>
        </ScrollReveal>

        <ScrollReveal client:visible delay={0.2}>
          <blockquote class="border-l-2 border-[var(--warm-wood)] pl-6">
            <p class="text-[var(--stone-900)] text-lg italic leading-relaxed mb-4">
              "Bombsquad consistently delivers innovative solutions that exceed expectations.
              Their technical expertise and global perspective make them invaluable."
            </p>
            <footer class="text-sm text-[var(--stone-400)]">
              â€” Technology Executive, Fortune 500 Company
            </footer>
          </blockquote>
        </ScrollReveal>
      </div>

      <!-- Right: Staggered stat cards -->
      <div class="grid grid-cols-2 gap-6">
        <ScrollReveal client:visible delay={0.1}>
          <div class="showroom-card text-center">
            <div class="text-4xl md:text-5xl font-extrabold text-[var(--stone-900)] tracking-tighter mb-2">
              $100M+
            </div>
            <p class="text-xs text-[var(--stone-400)] font-medium uppercase tracking-wider">
              Cumulative Exits
            </p>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={0.2}>
          <div class="showroom-card text-center mt-12">
            <div class="text-4xl md:text-5xl font-extrabold text-[var(--stone-900)] tracking-tighter mb-2">
              25+
            </div>
            <p class="text-xs text-[var(--stone-400)] font-medium uppercase tracking-wider">
              Years Experience
            </p>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={0.3}>
          <div class="showroom-card text-center">
            <div class="text-4xl md:text-5xl font-extrabold text-[var(--warm-wood)] tracking-tighter mb-2">
              F500
            </div>
            <p class="text-xs text-[var(--stone-400)] font-medium uppercase tracking-wider">
              Client Portfolio
            </p>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={0.4}>
          <div class="showroom-card text-center mt-12">
            <div class="text-4xl md:text-5xl font-extrabold text-[var(--stone-900)] tracking-tighter mb-2">
              3
            </div>
            <p class="text-xs text-[var(--stone-400)] font-medium uppercase tracking-wider">
              Continents
            </p>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </div>
</section>
